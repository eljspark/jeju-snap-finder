---
export interface Props {
  title: string;
  thumbnailUrl: string;
  price: number;
  duration: string;
  occasions: string[];
  reservationUrl: string;
}

const { title, thumbnailUrl, price, duration, occasions, reservationUrl } = Astro.props;
---

<section class="relative h-[60vh] md:h-[70vh] overflow-hidden">
  <div class="absolute inset-0">
    <img 
      src={thumbnailUrl} 
      alt={`${title} 메인 이미지`}
      class="w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent"></div>
  </div>
  
  <div class="relative z-10 h-full flex items-end">
    <div class="w-full p-6 md:p-12 text-white">
      <div class="max-w-4xl mx-auto">
        <h1 class="text-3xl md:text-5xl font-bold mb-4 animate-fade-in">
          {title}
        </h1>
        
        <div class="flex flex-wrap items-center gap-4 md:gap-6 mb-6 animate-slide-in">
          <div class="text-2xl md:text-3xl font-bold text-secondary">
            ₩{price.toLocaleString()}
          </div>
          <div class="text-lg md:text-xl opacity-90">
            {duration}
          </div>
          <div class="flex gap-2">
            {occasions.map((occasion) => (
              <span class="px-3 py-1 bg-white/20 backdrop-blur-sm rounded-full text-sm">
                {occasion}
              </span>
            ))}
          </div>
        </div>
        
        <a 
          href={reservationUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center px-8 py-3 bg-primary hover:bg-primary-dark text-primary-foreground font-semibold rounded-lg transition-colors duration-200 shadow-medium hover:shadow-strong"
        >
          예약하기
        </a>
      </div>
    </div>
  </div>
</section>