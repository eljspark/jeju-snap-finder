---
export interface Props {
  images: { name: string; url: string }[];
  packageTitle: string;
}

const { images, packageTitle } = Astro.props;
---

<section class="py-16 bg-background">
  <div class="max-w-7xl mx-auto px-6 md:px-12">
    <h2 class="text-2xl md:text-3xl font-bold text-center text-foreground mb-12">
      {packageTitle} 샘플 이미지
    </h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6">
      {images.map((image, index) => (
        <div class="group overflow-hidden rounded-lg shadow-soft hover:shadow-medium transition-shadow duration-300">
          <img
            src={image.url}
            alt={`${packageTitle} 샘플 ${index + 1}`}
            class="w-full h-64 md:h-80 object-cover transition-transform duration-300 group-hover:scale-105"
            loading="lazy"
          />
        </div>
      ))}
    </div>
  </div>
</section>